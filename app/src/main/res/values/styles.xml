<resources>

    <style name="Theme2AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/Theme2_colorPrimary</item>
        <item name="colorPrimaryDark">@color/Theme2_colorPrimaryDark</item>
        <item name="colorAccent">@color/Theme2_colorAccent</item>
    </style>
    <style name="Theme2AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme2FontMedium">
        <item name="fontPath">@string/theme2_font_medium</item>
    </style>

    <style name="Theme2FontSemiBold">
        <item name="fontPath">@string/theme2_font_semi_bold</item>
    </style>

    <style name="Theme2FontBold">
        <item name="fontPath">@string/theme2_font_bold</item>
    </style>

    <style name="Theme7RatingSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_6sdp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:enabled">false</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="Theme2MaterialButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/Theme2_spacing_standard</item>
        <item name="android:paddingEnd">@dimen/Theme2_spacing_standard</item>
        <item name="android:textColor">@color/Theme2_white</item>
        <item name="android:textSize">@dimen/Theme2_font_size_normal</item>
        <item name="android:layout_marginStart">@dimen/Theme2_spacing_standard</item>
        <item name="android:layout_marginEnd">@dimen/Theme2_spacing_standard</item>
        <item name="fontPath">@string/theme2_font_semi_bold</item>
        <item name="android:elevation">@dimen/Theme2_spacing_middle</item>
    </style>
    <style name="Theme2EditTextStyle_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/Theme2_spacing_middle</item>
        <item name="android:paddingEnd">@dimen/Theme2_spacing_middle</item>
        <item name="android:paddingTop">@dimen/Theme2_spacing_control_half</item>
        <item name="android:paddingBottom">@dimen/Theme2_spacing_control_half</item>
        <item name="android:layout_marginStart">@dimen/Theme2_spacing_standard</item>
        <item name="android:layout_marginEnd">@dimen/Theme2_spacing_standard</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/Theme2_textColorPrimary</item>
        <item name="android:textSize">@dimen/Theme2_font_size_normal</item>
    </style>
    <style name="Theme2EditText_Form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
<!--
        <item name="android:backgroundTint">@color/Theme2_textColorSecondary</item>
-->
        <item name="android:paddingStart">@dimen/Theme2_spacing_middle</item>
        <item name="android:paddingEnd">@dimen/Theme2_spacing_middle</item>
    </style>
    <style name="Theme2Heading_Form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Theme2_textColorSecondary</item>
        <item name="android:textSize">@dimen/Theme2_font_size_normal</item>
    </style>
    <style name="Theme2DrawerTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Theme2_font_size_medium</item>
        <item name="android:layout_marginEnd">@dimen/_1sdp</item>
        <item name="android:drawablePadding">@dimen/Theme2_spacing_standard_new</item>
        <item name="android:paddingStart">@dimen/Theme2_spacing_standard_new</item>
        <item name="android:paddingEnd">@dimen/Theme2_spacing_standard_new</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="fontPath">@string/theme2_font_medium</item>
    </style>
    <style name="Theme2DrawerTextStyle.Selected">
        <item name="android:textColor">@color/Theme2_colorPrimaryDark</item>
        <item name="android:drawableTint">@color/Theme2_colorPrimary</item>
        <item name="android:background">@color/Theme2_background_selected</item>
    </style>
    <style name="Theme2DrawerTextStyle.NotSelected">
        <item name="android:textColor">@color/Theme2_textColorPrimary</item>
        <item name="android:drawableTint">@color/Theme2_textColorPrimary</item>
        <item name="android:background">@null</item>
    </style>


</resources>
